            </header>

<div class="container mt-5 d-flex justify-content-center">
    <div class="card p-4 shadow-lg rounded-4" style="max-width: 500px; width: 100%; background: #fff;">
        <h2 class="text-center mb-4">Make Your Reservation</h2>
        
        {{ form_start(form, {'attr': {'novalidate': 'novalidate', 'class': 'needs-validation'}}) }}
        
        <div class="mb-3">
            {{ form_label(form.Nom_Evenement, 'Event Name', {'label_attr': {'class': 'form-label fw-bold'}}) }}
            <div class="input-group">
                <span class="input-group-text"><i class="bi bi-calendar-event"></i></span>
                {{ form_widget(form.Nom_Evenement, {'attr': {'class': 'form-control'}}) }}
            </div>
            <div class="text-danger">{{ form_errors(form.Nom_Evenement) }}</div>
        </div>

        <div class="mb-3">
            {{ form_label(form.Nombre_Tickets, 'Number of Tickets', {'label_attr': {'class': 'form-label fw-bold'}}) }}
            <div class="input-group">
                <span class="input-group-text"><i class="bi bi-ticket"></i></span>
                {{ form_widget(form.Nombre_Tickets, {'attr': {'class': 'form-control', 'type': 'number', 'min': '1'}}) }}
            </div>
            <div class="text-danger">{{ form_errors(form.Nombre_Tickets) }}</div>
        </div>

        <div class="mb-3">
            {{ form_label(form.Date_Reservation, 'Reservation Date', {'label_attr': {'class': 'form-label fw-bold'}}) }}
            <div class="input-group">
                <span class="input-group-text"><i class="bi bi-calendar-date"></i></span>
                {{ form_widget(form.Date_Reservation, {'attr': {'class': 'form-control', 'type': 'date'}}) }}
            </div>
            <div class="text-danger">{{ form_errors(form.Date_Reservation) }}</div>
        </div>

        <div class="mb-3">
            {{ form_label(form.Heure, 'Reservation Hour', {'label_attr': {'class': 'form-label fw-bold'}}) }}
            <div class="input-group">
                <span class="input-group-text"><i class="bi bi-clock"></i></span>
                {{ form_widget(form.Heure, {'attr': {'class': 'form-control', 'type': 'time'}}) }}
            </div>
            <div class="text-danger">{{ form_errors(form.Heure) }}</div>
        </div>

        <div class="mb-3">
            {{ form_label(form.email, 'Email', {'label_attr': {'class': 'form-label fw-bold'}}) }}
            <div class="input-group">
                <span class="input-group-text"><i class="bi bi-envelope"></i></span>
                {{ form_widget(form.email, {'attr': {'class': 'form-control', 'type': 'email', 'placeholder': 'Enter your email'}}) }}
            </div>
            <div class="text-danger">{{ form_errors(form.email) }}</div>
        </div>

        <button type="submit" class="btn w-100 btn-lg mt-3" style="background-color: #339fff; border-color: #339fff;">Submit Reservation</button>

        
        {{ form_end(form) }}
    </div>
