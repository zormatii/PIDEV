    <!-- Bouton Retour au Dashboard -->
    <div class="text-start mt-3">
        <a href="{{ path('dash_page') }}" class="btn btn-secondary">â¬… Retour au Dashboard</a>
    </div>

    <div class="row mt-4">
        <!-- Carte pour Total des RÃ©servations et Graphique Circulaire -->
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-header text-center font-weight-bold">ðŸ“Œ Total des RÃ©servations</div>
                <div class="card-body text-center">
                    <h3 class="card-title">{{ totalReservations }}</h3>
                    <div class="chart-container">
                        <canvas id="reservationsChart"></canvas>
                    </div>
                </div>
            </div>
        </div>

        <!-- Carte pour RÃ©servations par Ã‰vÃ©nement -->
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-header text-center font-weight-bold">ðŸ“Š RÃ©servations par Ã‰vÃ©nement</div>
                <div class="card-body">
                    <div class="chart-container-large">
                        <canvas id="reservationsByEventChart"></canvas>
                    </div>
                </div>
            </div>
