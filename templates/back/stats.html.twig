<style>
    .chart-container {
        width: 100%;
        max-width: 400px;
        height: 300px;
        margin: auto;
    }

    .chart-container-large {
        width: 100%;
        max-width: 700px; /* Augmenter la largeur */
        height: 450px; /* Augmenter la hauteur */
        margin: auto;
    }
</style>

<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script>
    document.addEventListener("DOMContentLoaded", function () {
        // Graphique circulaire des rÃ©servations
        var ctx = document.getElementById('reservationsChart').getContext('2d');
        new Chart(ctx, {
            type: 'doughnut',
            data: {
                labels: ['RÃ©servations'],
                datasets: [{
                    data: [{{ totalReservations }}],
                    backgroundColor: ['#ff0060'], // Nouvelle couleur
                    borderColor: ['#ffffff'],
                    borderWidth: 2
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                cutout: '70%'
            }
        });

        // Histogramme des rÃ©servations par Ã©vÃ©nement
        var ctxBar = document.getElementById('reservationsByEventChart').getContext('2d');
        var reservationsByEvent = {{ reservationsByEvent|raw }};

        var labels = reservationsByEvent.map(item => item.eventName);
        var data = reservationsByEvent.map(item => item.count);

        new Chart(ctxBar, {
            type: 'bar',
            data: {
                labels: labels,
                datasets: [{
                    label: 'Nombre de rÃ©servations par Ã©vÃ©nement',
                    data: data,
                    backgroundColor: '#ff0060', // Nouvelle couleur
                    borderColor: '#ff0060',
                    borderWidth: 1
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false, // Permet d'agrandir le graphique
                scales: {
                    y: {
                        beginAtZero: true
                    }
                }
            }
        });
    });
</script>
