<div class="container-form">
    <h1>Acheter un Ticket</h1>

    {% if form.vars.errors|length > 0 %}
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <strong>Erreur !</strong> Veuillez corriger les erreurs ci-dessous.
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    {% endif %}

    {{ form_start(form, {'attr': {'novalidate': 'novalidate', 'class': 'needs-validation'}}) }}

    <div class="mb-3">
        {{ form_label(form.Nom, 'Last Name', {'label_attr': {'class': 'form-label'}}) }}
        {{ form_widget(form.Nom, {'attr': {'class': 'form-control' ~ (form.Nom.vars.errors ? ' is-invalid' : '') }}) }}
        <div class="invalid-feedback">
            {{ form_errors(form.Nom) }}
        </div>
    </div>

    <div class="mb-3">
        {{ form_label(form.Prenom, 'Name', {'label_attr': {'class': 'form-label'}}) }}
        {{ form_widget(form.Prenom, {'attr': {'class': 'form-control' ~ (form.Prenom.vars.errors ? ' is-invalid' : '') }}) }}
