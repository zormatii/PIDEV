            {{ form_errors(form.date) }}
        </div>
    </div>

    <div class="mb-3">
        {{ form_label(form.Prix, 'Price', {'label_attr': {'class': 'form-label'}}) }}
        {{ form_widget(form.Prix, {'attr': {'class': 'form-control' ~ (form.Prix.vars.errors ? ' is-invalid' : '') }}) }}
        <div class="invalid-feedback">
            {{ form_errors(form.Prix) }}
        </div>
    </div>

    <div class="mb-3">
        {{ form_label(form.reservation, 'Reservation', {'label_attr': {'class': 'form-label'}}) }}
        {{ form_widget(form.reservation, {'attr': {'class': 'form-control' ~ (form.reservation.vars.errors ? ' is-invalid' : '') }}) }}
