{% extends 'base.html.twig' %}
{% block title %}
   Pending events
{% endblock %}

{% block body %}
<h1>Événements en attente</h1>

<table class="table">
    <thead>
        <tr>
            <th>Title</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        {% for evenement in evenements %}
            <tr>
                <td>{{ evenement.titre }}</td>
                <td>
                    <a href="{{ path('admin_event_validate', {'id': evenement.id}) }}" class="btn btn-success">Approve</a>
                    <a href="{{ path('admin_event_reject', {'id': evenement.id}) }}" class="btn btn-danger">Decline</a>
                </td>
            </tr>
        {% endfor %}
    </tbody>
</table>
{% endblock %}
