                                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ evenement.id) }}" />
                                        <button class="btn btn-outline-danger btn-sm">
                                            <i class="bi bi-trash"></i> Delete
                                        </button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                {% else %}
