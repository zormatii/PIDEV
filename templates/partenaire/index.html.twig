{% extends 'base.html.twig' %}

{% block title %}Partenaire list{% endblock %}

{% block stylesheets %}
<style>
    body {
        background-color: #8B0000; /* Dark red background */
        color: white; /* Change text color to white for better contrast */
    }
    .card {
        background-color: rgba(255, 255, 255, 0.1); /* Semi-transparent card background */
        border: none; /* Remove card borders */
    }
    .site-footer {
        background-color: #4B0000; /* Darker shade for footer */
    }
</style>
{% endblock %}

{% block body %}
<header class="site-header">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 col-12 d-flex flex-wrap">
                <p class="d-flex me-4 mb-0">
                    <i class="bi-person custom-icon me-2"></i>
                    <strong>Welcome to Music Festival 2023</strong>
                </p>
            </div>
        </div>
    </div>
</header>

<h1 class="text-center my-4">Partners</h1>

<div class="container">
    <div class="row">
        {% for partenaire in partenaires %}
            <div class="col-lg-4 col-md-6 mb-4">
                <div class="card text-center" style="border-radius: 15px; overflow: hidden;">
                    <div class="card-header" style="background: linear-gradient(135deg, #6e7dff, #a1c4fd);">
                        <div class="img-container" style="border-radius: 50%; overflow: hidden; width: 100px; height: 100px; margin: auto;">
                            <alt="{{ partenaire.nomP }}" class="img-fluid" style="width: 100%;">
                        </div>
                        <h5 class="text-white mt-3">{{ partenaire.nomP }}</h5>
                    </div>
                    <div class="card-body">
                        <p class="card-text"><strong>Email:</strong> {{ partenaire.emailP }}</p>
                        <p class="card-text"><strong>Telephone:</strong> {{ partenaire.telephone }}</p>
                        <p class="card-text"><strong>Type:</strong> {{ partenaire.typeP }}</p>
                    </div>
                    <div class="card-footer text-center">
                        <a href="{{ path('app_partenaire_view', {'id': partenaire.id}) }}" class="btn btn-info btn-sm">Show</a>
                        <a href="{{ path('app_partenaire_update', {'id': partenaire.id}) }}" class="btn btn-warning btn-sm">Edit</a>
                        <form action="{{ path('app_partenaire_delete', {'id': partenaire.id}) }}" method="post" onsubmit="return confirm('Are you sure you want to delete this partner?');" style="display:inline;">
                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ partenaire.id) }}">
                            <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                        </form>
                    </div>
                </div>
            </div>
        {% else %}
            <div class="col-12 text-center">
                <p>No records found</p>
            </div>
        {% endfor %}
    </div>

    <div class="text-center mt-4">
        <a href="{{ path('app_partenaire_create') }}" class="btn btn-success btn-lg">Create New Partner</a>
    </div>
</div>

<footer class="site-footer text-white mt-5">
