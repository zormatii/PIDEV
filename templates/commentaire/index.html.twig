{% extends 'base.html.twig' %}

{% block title %}Commentaire index{% endblock %}

{% block body %}



 <header class="site-header">
                <div class="container">
                    <div class="row">
                        
                        <div class="col-lg-12 col-12 d-flex flex-wrap">
                            <p class="d-flex me-4 mb-0">
                                <i class="bi-person custom-icon me-2"></i>
                                <strong class="text-dark">Welcome to Music Festival 2023</strong>
                            </p>
                        </div>

                    </div>
                </div>
            </header>















<div class="container mt-5 animate__animated animate__fadeIn">
    <!-- Affichage des messages flash -->
    {% for label, messages in app.flashes %}
        {% for message in messages %}
            <div class="alert alert-{{ label == 'error' ? 'danger' : label }} animate__animated animate__fadeInDown">
                {{ message }}
            </div>
        {% endfor %}
    {% endfor %}

    <h1 class="text-center display-4 fw-bold text-primary mb-4">Commentaire Index</h1>

    <table class="table table-striped table-hover shadow-lg rounded">
        <thead class="bg-dark text-white">
            <tr>
                <th>Id</th>
                <th>IdCommentaire</th>
                <th>Idclient</th>
                <th>Contenu</th>
                <th>Date_depublication</th>
                <th>Auteur</th>
                <th>Blog Title</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for commentaire in commentaires %}
            <tr>
                <td>{{ commentaire.id }}</td>
                <td>{{ commentaire.idCommentaire }}</td>
                <td>{{ commentaire.idclient }}</td>
                <td>{{ commentaire.contenu }}</td>
                <td>{{ commentaire.dateDepublication ? commentaire.dateDepublication|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ commentaire.auteur }}</td>
                <td>{{ commentaire.blog.titre }}</td>
                <td>
                    <div class="d-flex gap-2">
                        <a href="{{ path('app_commentaire_show', {'id': commentaire.id}) }}" class="btn btn-info animate__animated animate__zoomIn">Show</a>
                        <a href="{{ path('app_commentaire_edit', {'id': commentaire.id}) }}" class="btn btn-warning animate__animated animate__zoomIn">Edit</a>
                        <a href="{{ path('app_commentaire_delete', {'id': commentaire.id}) }}" class="btn btn-danger animate__animated animate__zoomIn" onclick="return confirm('Are you sure you want to delete this comment?');">Delete</a>
                    </div>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8" class="text-center text-muted">No records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

 

</div>

<style>
    .table-hover tbody tr:hover {
        background-color: rgba(0, 123, 255, 0.1);
    }

    .btn:hover {
        box-shadow: 0 0 15px rgba(0, 0, 0, 0.3);
    }

    .badge {
        padding: 0.5em 1em;
        font-size: 0.9em;
    }
</style>
{% endblock %}