    <div class="container">
        <h1>Éditer le Commentaire</h1>
        {{ form_start(form, {'attr': {'class': 'comment-form'}}) }}

        <div class="form-group">
            <label for="commentaire_idCommentaire">Numéro de Commentaire :</label>
            {{ form_widget(form.idCommentaire, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.idCommentaire) }}
        </div>

        <div class="form-group">
            <label for="commentaire_idclient">Identifiant Client :</label>
            {{ form_widget(form.idclient, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.idclient) }}
        </div>

        <div class="form-group">
            <label for="commentaire_contenu">Contenu :</label>
            {{ form_widget(form.contenu, {'attr': {'class': 'form-control', 'rows': 4}}) }}
            {{ form_errors(form.contenu) }}
        </div>

      

        <div class="form-group">
            <label for="commentaire_auteur">Auteur :</label>
            {{ form_widget(form.auteur, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.auteur) }}
        </div>

        <div class="form-group">
            <label for="commentaire_blog">Blog Associé :</label>
            {{ form_widget(form.blog, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.blog) }}
        </div>

        <div class="form-group">
            <button type="submit" class="btn btn-primary">Sauvegarder</button>
            <a href="{{ path('app_commentaire_index') }}" class="btn btn-secondary">Annuler</a>
              <a href="{{ path('tables') }}" class="btn btn-outline-secondary">Back to dash</a>
        </div>

        {{ form_end(form) }}
