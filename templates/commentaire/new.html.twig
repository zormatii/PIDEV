{% extends 'base.html.twig' %}

{% block title %}Ajouter un Commentaire{% endblock %}

{% block body %}




 <header class="site-header">
                <div class="container">
                    <div class="row">
                        
                        <div class="col-lg-12 col-12 d-flex flex-wrap">
                            <p class="d-flex me-4 mb-0">
                                <i class="bi-person custom-icon me-2"></i>
                                <strong class="text-dark">Welcome to Music Festival 2023</strong>
                            </p>
                        </div>

                    </div>
                </div>
            </header>














    <div class="container mt-4">
        <h1>Ajouter un Commentaire</h1>

        {{ form_start(form, {'attr': {'novalidate': 'novalidate', 'class': 'needs-validation'}}) }}

        <div class="mb-3">
            {{ form_label(form.idCommentaire, 'Comment Number', {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(form.idCommentaire, {'attr': {'class': 'form-control'}}) }}
            <div class="text-danger">
                {% for error in form.idCommentaire.vars.errors %}
                    <span class="error-message">{{ error.message }}</span>
                {% endfor %}
            </div>
        </div>

        <div class="mb-3">
            {{ form_label(form.idclient, 'Client Identifier', {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(form.idclient, {'attr': {'class': 'form-control'}}) }}
            <div class="text-danger">
                {% for error in form.idclient.vars.errors %}
                    <span class="error-message">{{ error.message }}</span>
                {% endfor %}
            </div>
        </div>

        <div class="mb-3">
            {{ form_label(form.contenu, 'Content', {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(form.contenu, {'attr': {'class': 'form-control'}}) }}
            <div class="text-danger">
                {% for error in form.contenu.vars.errors %}
                    <span class="error-message">{{ error.message }}</span>
                {% endfor %}
            </div>
        </div>

        <div class="mb-3">
            {{ form_label(form.auteur, 'Author', {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(form.auteur, {'attr': {'class': 'form-control'}}) }}
            <div class="text-danger">
                {% for error in form.auteur.vars.errors %}
                    <span class="error-message">{{ error.message }}</span>
                {% endfor %}
            </div>
        </div>

        <div class="mb-3">
            {{ form_label(form.blog, 'Blog', {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(form.blog, {'attr': {'class': 'form-control'}}) }}
            <div class="text-danger">
                {% for error in form.blog.vars.errors %}
                    <span class="error-message">{{ error.message }}</span>
                {% endfor %}
            </div>
        </div>

        <button type="submit" class="btn btn-primary">Ajouter Commentaire</button>
        

        {{ form_end(form) }}
    </div>
{% endblock %}