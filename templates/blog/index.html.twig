    <div class="text-center mb-4">
        <button id="darkModeToggle" class="btn btn-outline-orange">
            üåô Activer Dark Mode
        </button>
    </div>

<script>
    document.addEventListener("DOMContentLoaded", function () {
        const darkModeToggle = document.getElementById("darkModeToggle");
        const body = document.body;

        if (localStorage.getItem("darkMode") === "enabled") {
            body.classList.add("dark-mode");
            darkModeToggle.textContent = "‚òÄÔ∏è D√©sactiver Dark Mode";
        }

        darkModeToggle.addEventListener("click", () => {
            body.classList.toggle("dark-mode");
            if (body.classList.contains("dark-mode")) {
                localStorage.setItem("darkMode", "enabled");
                darkModeToggle.textContent = "‚òÄÔ∏è D√©sactiver Dark Mode";
            } else {
                localStorage.setItem("darkMode", "disabled");
                darkModeToggle.textContent = "üåô Activer Dark Mode";
            }
        });
    });
</script>

<style>
body.dark-mode {
    background-color: #121212;
    color: #ffffff;
    transition: all 0.4s ease-in-out;
}

body {
    background-color: #fffaf0;
    font-family: 'Poppins', sans-serif;
}

.text-orange {
    color: #ff6f00;
}

.btn-outline-orange {
    border: 2px solid #ff6f00;
    color: #ff6f00;
    transition: background 0.3s ease-in-out;
}

.btn-outline-orange:hover, .btn-primary, .btn-success, .btn-warning, .btn-danger {
    background: #ff6f00;
    color: #fff;
    border: none;
}

.card {
    border: none;
    overflow: hidden;
    transition: transform 0.4s ease-in-out;
    box-shadow: 0 4px 15px rgba(0, 0, 0, 0.2);
}

.card:hover {
    transform: scale(1.05);
}

.dark-mode .card {
    background-color: #1e1e1e;
    border: 1px solid rgba(255, 255, 255, 0.2);
}

.dark-mode a {
    color: #ff6f00;
}

.dark-mode .btn {
    background: #ff6f00;
    color: white;
}

.btn-orange {
    background: #d2b48c; /* Beige clair */
    color: #fff;
    border: none;
    transition: background 0.3s ease-in-out;
}

.btn-orange:hover {
    background: #c2a778;
}

.btn-brown {
    background: #2e8b57; /* Vert sapin */
    color: #fff;
    border: none;
    transition: background 0.3s ease-in-out;
}

.btn-brown:hover {
