                            <button type="submit" class="btn btn-brown btn-sm">J'aime üëç</button>
                        </form>
                        <a href="{{ path('app_commentaire_new', {'id': blog.id}) }}" class="btn btn-brown btn-sm">Commenter üìù</a>
                    </div>
                </div>
            </div>
        </div>
    {% else %}
        <div class="col-12 text-center text-muted animate__animated animate__fadeInUp">Aucun enregistrement trouv√©</div>
    {% endfor %}
</div>

<div class="d-flex justify-content-center mt-4 animate__animated animate__fadeInUp">
