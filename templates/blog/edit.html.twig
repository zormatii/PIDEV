{% extends 'base.html.twig' %}

{% block title %}Éditer l'Article{% endblock %}

{% block body %}
<header class="site-header">
                <div class="container">
                    <div class="row">
                        
                        <div class="col-lg-12 col-12 d-flex flex-wrap">
                            <p class="d-flex me-4 mb-0">
                                <i class="bi-person custom-icon me-2"></i>
                                <strong class="text-dark">Welcome to Music Festival 2023</strong>
                            </p>
                        </div>

                    </div>
                </div>
            </header>


<div class="container mt-5">
    {% if app.flashes('success') %}
        <div class="alert alert-success">
            {{ app.flashes('success')[0] }}
        </div>
    {% endif %}

    {{ form_start(form, {'attr': {'class': 'blog-form'}}) }}

    <div class="form-group mb-3">
        <label for="blog_titre" class="form-label">Titre :</label>
        {{ form_widget(form.titre, {'attr': {'class': 'form-control'}}) }}
        {{ form_errors(form.titre) }}
    </div>

    <div class="form-group mb-3">
        <label for="blog_contenu" class="form-label">Contenu :</label>
        {{ form_widget(form.contenu, {'attr': {'class': 'form-control', 'rows': 8}}) }}
        {{ form_errors(form.contenu) }}
    </div>

    <div class="form-group mb-3">
        <label for="blog_image" class="form-label">Image :</label>
        {{ form_widget(form.image, {'attr': {'class': 'form-control', 'onchange': 'previewFile()'}}) }}
        <small class="text-muted">Image actuelle : {{ blog.image }}</small>
        {{ form_errors(form.image) }}
    </div>

    <div class="form-group mb-3">
        <label for="blog_date_creation" class="form-label">Date de Création :</label>
        {{ form_widget(form.date_creation, {'attr': {'class': 'form-control'}}) }}
        {{ form_errors(form.date_creation) }}
    </div>

    <div class="form-group mb-3">
        <label for="blog_createur_article" class="form-label">Créateur :</label>
        {{ form_widget(form.createur_article, {'attr': {'class': 'form-control', 'readonly': 'readonly'}}) }}
        {{ form_errors(form.createur_article) }}
    </div>

    <div class="d-flex justify-content-between">
        <button type="submit" class="btn btn-success">
            <i class="bi-save"></i> Sauvegarder
        </button>
        <a href="{{ path('app_blog_index') }}" class="btn btn-secondary">
            <i class="bi-arrow-left"></i> Annuler
        </a>
        <a href="{{ path('tables') }}" class="btn btn-outline-secondary">
            <i class="bi-list"></i> Liste des articles
        </a>
    </div>

    {{ form_end(form) }}
</div>

<script>
function previewFile() {
    const fileInput = document.querySelector('#blog_image');
    if (fileInput.files.length > 0) {
        alert(`Fichier sélectionné : ${fileInput.files[0].name}`);
    }
}
</script>



