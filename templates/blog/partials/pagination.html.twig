{% if pagination.pageCount > 1 %}
<nav aria-label="Page navigation">
    <ul class="pagination pagination-lg justify-content-center pagination-blue">
        {# Bouton "<<" Première Page #}
        {% if pagination.currentPageNumber != 1 %}
            <li class="page-item">
                <a class="page-link" href="{{ path(app.request.attributes.get('_route'), app.request.query.all|merge({'page': 1})) }}" aria-label="First">
                    <span aria-hidden="true">&laquo;&laquo;</span>
                </a>
            </li>
        {% endif %}

        {# Bouton "<" Page Précédente #}
        {% if pagination.previousPageNumber is defined %}
            <li class="page-item">
                <a class="page-link" href="{{ path(app.request.attributes.get('_route'), app.request.query.all|merge({'page': pagination.previousPageNumber})) }}" aria-label="Previous">
                    <span aria-hidden="true">&laquo;</span>
                </a>
            </li>
        {% endif %}

        {# Numéros des Pages #}
        {% for page in pagination.paginationData.pagesInRange %}
            <li class="page-item {% if page == pagination.currentPageNumber %}active{% endif %}">
                <a class="page-link" href="{{ path(app.request.attributes.get('_route'), app.request.query.all|merge({'page': page})) }}">
                    {{ page }}
                </a>
            </li>
        {% endfor %}

        {# Bouton ">" Page Suivante #}
        {% if pagination.nextPageNumber is defined %}
            <li class="page-item">
                <a class="page-link" href="{{ path(app.request.attributes.get('_route'), app.request.query.all|merge({'page': pagination.nextPageNumber})) }}" aria-label="Next">
                    <span aria-hidden="true">&raquo;</span>
                </a>
            </li>
        {% endif %}

        {# Bouton ">>" Dernière Page #}
        {% if pagination.currentPageNumber != pagination.pageCount %}
            <li class="page-item">
                <a class="page-link" href="{{ path(app.request.attributes.get('_route'), app.request.query.all|merge({'page': pagination.pageCount})) }}" aria-label="Last">
                    <span aria-hidden="true">&raquo;&raquo;</span>
                </a>
            </li>
        {% endif %}
    </ul>
</nav>
{% endif %}
